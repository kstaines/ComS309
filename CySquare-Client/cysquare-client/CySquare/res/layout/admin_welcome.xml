<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AdminWelcome" >

    <TextView
        android:id="@+id/admin_welcome"
        style="@style/PageTitle"
        android:layout_alignTop="@+id/logout_button"
        android:text="@string/admin_welcome" />

    <Button
        android:id="@+id/logout_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/logout" />
    
    <Button
        android:id="@+id/admin_profile_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/my_profile" />
    
    <Button
        android:id="@+id/manage_classes_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_profile_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/manage_classes" />

    <Button
        android:id="@+id/manage_users_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manage_classes_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/manage_users" />
    
    <Button
        android:id="@+id/reset_all_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manage_users_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/reset_all" />
    
</RelativeLayout>