<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InstructorWelcome" >

    <TextView
        android:id="@+id/instructor_welcome"
        style="@style/PageTitle"
        android:layout_alignTop="@+id/logout_button"
        android:text="@string/instructor_welcome" />

    <Button
        android:id="@+id/logout_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/logout" />

    <Button
        android:id="@+id/instructor_profile_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instructor_checkins_button"
        android:layout_below="@+id/logout_button"
        android:layout_marginTop="34dp"
        android:text="@string/my_profile" />

    <Button
        android:id="@+id/instructor_checkins_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructor_profile_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/current_checkins" />

</RelativeLayout>