<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.iastate.cysquare.AdminUnapprovedUsers" >

    <Button
        android:id="@+id/back_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unapproved_users"
        android:text="@string/Back" />

    <TextView
        android:id="@+id/unapproved_users"
        style="@style/PageTitle"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@+id/back_button"
        android:text="@string/unapproved_title" />

    <ListView
        android:id="@+id/unapprovedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/back_button"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/delete_button" >

    </ListView>

    <Button
        android:id="@+id/approve_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/unapprovedList"
        android:layout_alignRight="@+id/unapproved_users"
        android:text="@string/approve" />

    <Button
        android:id="@+id/delete_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_button"
        android:layout_toRightOf="@+id/back_button"
        android:text="@string/delete" />

</RelativeLayout>
